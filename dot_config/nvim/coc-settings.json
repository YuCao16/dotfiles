{
  "coc.preferences.willSaveHandlerTimeout": 2000,
  "signature.floatConfig": { "border": true },
  "suggest.floatConfig": { "border": true, "rounded": true },
  "hover.floatConfig": { "border": true },
  "diagnostic.floatConfig": { "border": true },
  "coc.preferences.formatOnSaveFiletypes": ["python", "markdown", "lua"],
  "python.formatting.provider": "black",
  "lightbulb.only": ["quickfix"],
  "coc.source.vimtex.filetypes": [
    "tex",
    "plaintex",
    "latex",
    "markdown",
    "*.ipynb"
  ],
  "Lua.diagnostics.enable": false,
  "cSpell.enabledLanguageIds": ["latex", "markdown", "text"],
  "cSpellExt.enableDictionaries": ["catalan"],
  "cSpell.language": "en,ca",
  // be careful not to condense the hierarchy as it breaks pyls
  "languageserver": {
    "python": {
      "command": "/usr/bin/python3",
      "args": ["-mpyls", "-vv", "--log-file", "/tmp/lsp_python.log"],
      "trace.server": "verbose",
      "filetypes": ["python"],
      "settings": {
        "pyls": {
          "enable": true,
          "trace": {
            "server": "verbose"
          },
          "commandPath": "",
          "configurationSources": ["pycodestyle"],
          "plugins": {
            "mccabe": {
              "enabled": true,
              "threshold": 15
            },
            "preload": {
              "enabled": false
            },
            "pycodestyle": {
              "enabled": true
            },
            "pydocstyle": {
              "enabled": false,
              "match": "(?!test_).*\\.py",
              "matchDir": "[^\\.].*"
            },
            "pyflakes": {
              "enabled": false
            },
            "rope_completion": {
              "enabled": true
            },
            "yapf": {
              "enabled": false
            }
          }
        }
      }
    }
  }
}
